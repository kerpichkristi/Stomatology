@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="col-md-10 col-lg-10">
        <section>
            <form id="account" method="post">
                <h4 class="h3 mb-3 fw-normal">Use account to log in.</h4>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Input.Email"/>
                    <label asp-for="Input.Email" for="floatingInput"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password"/>
                    <label asp-for="Input.Password" for="floatingPassword"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br>
                <div class="checkbox mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <br>
                <div class="form-group">
                  @*  <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                   @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
  
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
