@page
@model AddUserModel
@{
    ViewData["Title"] = "Add User";
}
<a type="button" class="btn btn-secondary" href="/Administration/Users/AllUsers">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
    </svg>
</a>
<br>
<br>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="login-logout-tab">


            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-10 col-lg-10">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h4 class="h3 mb-3 fw-normal">@ViewData["Title"]</h4>

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="form-floating col-md-6">
                                        <input asp-for="Input.FirstName" class="form-control" id="floatingFirstName" placeholder=" FirstName" />
                                        <label asp-for="Input.FirstName">&emsp;First Name</label>
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating col-md-6">
                                        <input asp-for="Input.LastName" class="form-control" id="floatingLastName" placeholder=" LastName" />
                                        <label asp-for="Input.LastName">&emsp;Last Name</label>
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control" id="floatingEmail" placeholder="Email" />
                                    <label asp-for="Input.Email">&nbsp;Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-6 form-floating">
                                        <input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="Password" />
                                        <label asp-for="Input.Password">&emsp;Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 form-floating">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" id="floatingPassword" placeholder="Password" />
                                        <label asp-for="Input.ConfirmPassword">&emsp;ConfirmPassword</label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <br>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
                            </form>
                        </div>

                        @section Scripts {
                            <partial name="_ValidationScriptsPartial" />
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
