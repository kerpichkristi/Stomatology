@page
@model AllRolesModel
@{
    ViewData["Title"] = "AllRoles";
}
<a type="button" class="btn btn-secondary" href="/Identity/Account/Manage">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
    </svg>
</a>
<br>
<br>
<h4 class="text-center">@ViewData["Title"]</h4>
<div class="text-end">
    <a class="btn btn-sm btn-dark" href="/Administration/Roles/CreateRole">Add Role</a>
    <a class="btn btn-sm btn-dark" href="/Administration/Users/AllUsers">Users List</a>
</div>
<br>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.RolesList)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-danger" asp-page="./AllRoles" onclick="return confirm
                    ('Are you sure you want to delete this item?');"
                           asp-page-handler="Delete" asp-route-id="@role.Id">
                            Delete
                        </a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
