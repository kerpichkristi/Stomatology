@page
@model AllRecordsModel
@{
    ViewData["Title"] = "Edit Records";
}
<a type="button" class="btn btn-secondary" href="/Identity/Account/Manage">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
    </svg>
</a>
<br>
<br>
<h4 class="text-center">@ViewData["Title"]</h4>

<div class="text-end">
    <a class="btn btn-sm btn-dark" href="/Moderator/Procedures/AllProcedures">Procedures List</a>
    <a class="btn btn-sm btn-dark" href="/Moderator/Dentists/AllDentists">Dentist List</a>
</div>
<br><br>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("RecordID")
            </th>
            <th>
                @Html.DisplayName("FirstName")
            </th>
            <th>
                @Html.DisplayName("LastName")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("PhoneNumber")
            </th>
            <th>
                @Html.DisplayName("Address")
            </th>
            <th>
                @Html.DisplayName("Info")
            </th>
            <th>
                @Html.DisplayName("Dentist")
            </th>
            <th>
                @Html.DisplayName("Procedure")
            </th>
            <th>
                @Html.DisplayName("Date")
            </th>
            <th>
                @Html.DisplayName("Subscribe")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RecordList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dentist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subscribe)
                </td>
                <td>

                    <a asp-page="./AllRecords" onclick="return confirm
                    ('Are you sure you want to delete this item?');"
                       asp-page-handler="Delete" asp-route-id="@item.RecordID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>