@page
@using Microsoft.AspNetCore.Http
@model CreateDentistModel
@{
    ViewData["Title"] = "Create Dentists";
}
<a type="button" class="btn btn-secondary" href="/Moderator/Dentists/AllDentists">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
    </svg>
</a>
<br>
<br>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="login-logout-tab">
            <div class="card-content">
                <h4>@ViewData["Title"]</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-10 col-lg-10">
                            <form method="post">
                                <div class="row g-3">
                                    <div class="col-sm-6">
                                        <label asp-for="Dentist.DentistName" class="form-label">Name</label>
                                        <input asp-for="Dentist.DentistName" type="text" class="form-control" required>
                                        <span class="alert-danger" asp-validation-for="Dentist.DentistName" Dentist.DentistName"></span>
                                    </div>

                                    <div class="col-sm-6">
                                        <label asp-for="Dentist.Age" class="form-label">Age</label>
                                        <input asp-for="Dentist.Age" min="18" max="80" class="form-control" required>
                                        <span class="alert-danger" asp-validation-for="Dentist.Age"></span>

                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Dentist.Email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                                        <input asp-for="Dentist.Email" class="form-control" placeholder="you@example.com" required>
                                        <span class="alert-danger" asp-validation-for="Dentist.Email"></span>
                                    </div>
                                </div>

                                <br>

                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a class="btn btn-secondary" asp-page="./AllDentists">Clear</a>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>