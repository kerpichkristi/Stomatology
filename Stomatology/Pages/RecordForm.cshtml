@page
@model RecordFormModel
@{
    ViewData["Title"] = "Dentist Booking Form";

}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="login-logout-tab">


            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-10 col-lg-10">
                            <form id="account" method="post">
                                <div class="row g-3">
                                    <div class="col-sm-6">
                                        <label asp-for="Record.FirstName" class="form-label">First name</label>
                                        <input asp-for="Record.FirstName" type="text" class="form-control" required>
                                        <span class="alert-danger" asp-validation-for="Record.FirstName"></span>
                                    </div>

                                    <div class="col-sm-6">
                                        <label asp-for="Record.LastName" class="form-label">Last name</label>
                                        <input asp-for="Record.LastName" type="text" class="form-control" required>
                                        <span class="alert-danger" asp-validation-for="Record.LastName"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Record.Email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                                        <input asp-for="Record.Email" class="form-control" placeholder="you@example.com">
                                        <span class="alert-danger" asp-validation-for="Record.Email"></span>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="Record.PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="Record.PhoneNumber" class="form-control" placeholder="+373 79 123456" required>
                                        <span class="alert-danger" asp-validation-for="Record.PhoneNumber"></span>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="Record.Address" class="form-label">Address</label>
                                        <input asp-for="Record.Address" class="form-control" placeholder="Calea Iesilor 28">
                                        <span class="alert-danger" asp-validation-for="Record.Address"></span>
                                    </div>
                                    <label asp-for="Record.Info">Additional Info</label>
                                    <div class="col-12">
                                        <textarea class="form-control" name="infoTextarea" rows="3" cols="69"></textarea>
                                    </div>
                                </div>

                                <hr class="my-4">
                                <div class="row g-3">
                                    <label asp-for="Record.Dentist" class="form-label">Choose a Dentist</label>
                                    <div class="btn-group col-11">
                                        <select class="form-select" asp-for="Record.Dentist">
                                            <option value="">Choose...</option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select a valid Dentist.
                                        </div>
                                    </div>
                                    <div class="help-tip">
                                        <p>Choose a dentist.</p>
                                    </div>

                                    <label asp-for="Record.Procedure" class="form-label">Choose a Procedure</label>
                                    <div class="btn-group col-11">
                                        <select class="form-select" asp-for="Record.Procedure">
                                            <option value="">Choose...</option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                            <option></option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please provide a valid Procedure.
                                        </div>
                                    </div>
                                    <div class="help-tip">
                                        <p>Choose a procedure.</p>
                                    </div>
                                    <div>
                                        <label asp-for="Record.Date" class="form-label">Choose a Date</label>
                                        <input asp-for="Record.Date" type="datetime-local" style="width: 213px;" class="form-control">
                                        <span class="alert-danger" asp-for="Record.Date"></span>
                                    </div>

                                </div>
                                <br>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="Record.Subscribe">
                                    <label class="form-check-label" for="save-info" asp-for="Record.Subscribe">Subscribe to Email</label>
                                </div>

                                <hr class="my-4">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a class="btn btn-secondary" asp-page="./RecordForm">Clear</a>
                            </form>
                            <br>
                            <div>
                                <h3 class="text-md font-semibold mb-4 title-underline">Clinica Stomatologică Chișinău</h3>
                                <div>
                                    <a href="tel:+373 (0) 22 505 140" class="mb-1 block">
                                        <i class="fas fa-phone text-teal-600 mr-3"></i> +373 (0) 22 505 140
                                    </a>
                                    <br>
                                    <a href="mailto:contact@drvictoria.md" class="mb-1 block">
                                        <i class="far fa-envelope-open text-teal-600 mr-3"></i> contact@drvictoria.md
                                    </a>
                                    <br>
                                    <a href="https://www.google.com/maps?q=str. Zelinski 38/1, or. Chișinău, MD-2038" target="_blank" class="mb-3">
                                        <i class="fas fa-map-marked-alt text-teal-600 mr-3"></i> str. Zelinski 38/1,
                                        or. Chișinău,
                                        MD-2038
                                    </a>
                                    <div class="mt-3">
                                        <div class="flex justify-between max-w-xs">
                                            <span class="mr-5">Luni - Vineri</span>
                                            <span>08:00 - 20:00</span>
                                        </div>
                                        <div class="flex justify-between max-w-xs">
                                            <span class="mr-5">Sâmbătă</span>
                                            <span>08:00 -  14:00</span>
                                        </div>
                                        <div class="flex justify-between max-w-xs">
                                            <span class="mr-5">Duminică</span>
                                            <span>Închis</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>